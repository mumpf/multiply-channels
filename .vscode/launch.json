{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.0/MultiplyChannels.dll",
            "args": [
                "create",
                "${env:USERPROFILE}/Documents/PlatformIO/Projects/knx/examples/knx-sonoffS20/knx-sonoffS20"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Test command",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.0/MultiplyChannels.dll",
            "args": [
                "new",
                "--AppName=AppName",
                "--AppNumber=543",
                "--SerialNumber=SERIAL",
                "--OrderNumber=ORDER",
                "--ProductName=ProductName",
                "--HardwareName=HardwareName",
                "--HardwareVersion=12",
                "Check.xml"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}